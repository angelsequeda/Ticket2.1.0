<div id="maincontainer">

  <div id="fotocontainer" style="padding: 5px;">
    <button type="button" class="btn " data-bs-toggle="modal" data-bs-target="#staticBackdrop">
      <img src="" alt="" style="height: 200px; width: 200px;" id="profilePhotoprofile">
    </button>
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
      aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Actualiza tu foto</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class='input-contenedor'>
              <input type="file" name='photoRegistertecler'>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary">Actualizar</button>
          </div>
        </div>
      </div>
    </div>


  </div>



  <div class="form-group">
    <input disabled type="text" name="" id="mailprofile" class="form-control">
  </div>

  <div class="formats card">
    <form action="" class="formats-profile">
      <div class="form-group">
        <h2>Bienvenido al perfil de</h2>
        <input disabled type="text" name="" id="usernameprofile" value="" class="form-control">
      </div>
      <div class="form-group" style="margin-top: 20px;">
        <input type="text" disabled id="tellUsSomethingprofile" value="" class="form-control">
      </div>
      <div class="form-group">
        <label for="nameprofile">En la vida real me llamo</label>
        <input disabled type="text" name="" id="nameprofile" class="form-control">
      </div>
      <div class="form-group">
        <label for="ageprofile">Tengo</label>
        <input disabled type="text" name="" id="ageprofile" class="form-control">años
      </div>
      <div class="form-group">
        <label for="countryprofile">Vivo en </label>
        <input disabled type="text" name="" id="countryprofile" class="form-control">
      </div>
      <div class="form-group">
        <label for="cityprofile">En la ciudad de </label>
        <input disabled type="text" name="" id="cityprofile" class="form-control">
      </div>
      <div class="form-group" id="passwordHidden" hidden>
        <label for="passwordprofile">Mi nueva contraseña</label>
        <input disabled type="password" name="" id="passwordprofile" class="form-control">
      </div>

    </form>
  </div>

  <div class="tablesprofile card">
    <table class="table" id="tableStudies">
      <tr>
        <th>Aquí he estudiado</th>
      </tr>
    </table>
    <button id="addStudy" hidden class="btn btn-success">+</button>
    <button id="deleteStudy" hidden class="btn btn-danger">-</button>
    <table class="table" id="tableLenguages">
      <tr>
        <th>Sé hablar otros idiomas!</th>
      </tr>
    </table>
    <button id="addLenguage" hidden class="btn btn-success">+</button>
    <button id="deleteLenguage" hidden class="btn btn-danger">-</button>
    <table class="table" id="tableHobbies">
      <tr>
        <th>Esto me gusta hacer</th>
      </tr>
    </table>
    <button id="addHobbie" hidden class="btn btn-success">+</button>
    <button id="deleteHobbie" hidden class="btn btn-danger">-</button>
    <table class="table" id="tableHabilities">
      <tr>
        <th>Otras habilidades que tengo son</th>
      </tr>
    </table>
    <button id="addHability" hidden class="btn btn-success">+</button>
    <button id="deleteHability" hidden class="btn btn-danger">-</button>
    <table class="table" id="tableComments">
      <tr>
        <th>Comentarios sobre mi</th>
      </tr>
    </table>
    <table class="table" id="tableSocials">
      <tr>
        <th>Puedes contactarme aquí</th>
      </tr>
    </table>
    <button id="addSocial" hidden class="btn btn-success">+</button>
    <button id="deleteSocial" hidden class="btn btn-danger">-</button>
  </div>
  <div id="Evaluationscontainer">
    <h2>Conocimientos</h2>
    <table id="Knows" style="margin-bottom: 20px;" class="table">
      <tr>
        <th style="width: 150px;">Base de datos</th>
        <th style="width: 150px;">API's</th>
        <th style="width: 150px;">Pruebas</th>
        <th style="width: 150px;">Seguridad</th>
        <th style="width: 150px;">Teoría de objetos</th>
        <th style="width: 150px;">¿Quién me evaluó?</th>
      </tr>
    </table>
    <h2>Manejo de tecnologías</h2>
    <table id="Technologies" style="margin-bottom: 20px;">
      <tr>
        <th style="width: 150px;">Nodejs</th>
        <th style="width: 150px;">Swagger</th>
        <th style="width: 150px;">Frontend</th>
        <th style="width: 150px;">Javascript</th>
        <th style="width: 150px;">¿Quién me evaluó?</th>
      </tr>
    </table>
    <h2>Desempeño</h2>
    <table id="Performance" style="margin-bottom: 20px;">
      <tr>
        <th style="width: 150px;">Calidad de código</th>
        <th style="width: 150px;">Velocidad de entrega</th>
        <th style="width: 150px;">Desempeño de código</th>
        <th style="width: 150px;">¿Quién me evaluó?</th>
      </tr>
    </table>
    <h2>Habilidades blandas</h2>
    <table id="Softskills" style="margin-bottom: 20px;">
      <tr>
        <th style="width: 150px;">Enfocado</th>
        <th style="width: 150px;">Trabajo en equipo</th>
        <th style="width: 150px;">Compromiso</th>
        <th style="width: 150px;">Comunicación</th>
        <th style="width: 150px;">Capacidad de aprender</th>
        <th style="width: 150px;">Solución de problemas</th>
        <th style="width: 150px;">¿Quién me evaluó?</th>
      </tr>
    </table>
    <h2>Ambiente profesional</h2>
    <table id="Profesional" style="margin-bottom: 20px;">
      <tr>
        <th style="width: 150px;">Git-Hub</th>
        <th style="width: 150px;">Trello/Jira</th>
        <th style="width: 150px;">Stack</th>
        <th style="width: 150px;">Metodologías ágiles</th>
        <th style="width: 150px;">¿Quién me evaluó?</th>
      </tr>
    </table>
  </div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Nueva evaluación
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ingrese los datos </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h4>Curiosidades</h4>
          <div class='input-contenedor'>
            <i class="fa fa-file-text icon"></i>
            <input name='tellUsSomething' id='tellusRegistertecler' type="text" placeholder="Algo curioso de ti">
          </div>


          <div class="text-center p-1">
            <h4>Tu lugar de trabajo</h4>
          </div>

          <div class='input-contenedor'>
            <i class="fa fa-globe icon"></i>
            <input name='city' id='countryRegistertecler' type="text" placeholder="¿De qué país eres?">
          </div>

          <div class='input-contenedor'>
            <i class="fa fa-map-marker icon"></i>
            <input name='country' id='cityRegistertecler' type="text" placeholder="¿Cuál es tu ciudad?">
          </div>

          <div class='input-contenedor'>
            <i class="fa fa-language icon"></i>
            <input name='language' id='language' type="text" placeholder="Idioma nuevo">
          </div>

          <div class='input-contenedor'>
            <i class="fa fa-graduation-cap icon"></i>
            <input name='school' id='school' type="text" placeholder="Nueva escuela">
          </div>

          <div class='input-contenedor'>
            <i class="fa fa-hourglass icon"></i>
            <input name='hobbies' id='hobbies' type="text" placeholder="Pasatiempos nuevos">
          </div>

          <div class='input-contenedor'>
            <i class="fa fa-child icon"></i>
            <input name='skills' id='skills' type="text" placeholder="Habilidades">
          </div>

          <h4>Contactos</h4>
          <div class='input-contenedor'>
            <i class="fa fa-phone icon"></i>
            <input name='phonenumber' id='phonenumber' type="number" placeholder="telefono">
          </div>

          <div class='input-contenedor'>
            <i class="fa fa-envelope-o icon"></i>
            <input name='mail' id='mail' type="text" placeholder="Correo electrónico">
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary">Guardar cambios</button>
        </div>
      </div>

    </div>
  </div>
</div>





